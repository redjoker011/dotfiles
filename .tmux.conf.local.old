##  Tmux Plugin Manager
# Move this to .tmux.conf since prefix + I look plugins there
############################
#
# Tmux plugin manager
# https://github.com/tmux-plugins/tpm
set -g @plugin 'tmux-plugins/tpm'

# tmux continuumm for continous session saving
# https://github.com/tmux-plugins/tmux-continuum/blob/master/docs/automatic_start.md
set -g @plugin 'tmux-plugins/tmux-continuum'
# Turn on tmux continuum
set -g @continuum-restore 'on'

# Enable tmux continumm
set -g @continuum-boot 'on'

set -g @plugin 'tmux-plugins/tmux-resurrect'
# Save Vim and Neovim Sessions
# for vim
set -g @resurrect-strategy-vim 'session'
# for neovim
set -g @resurrect-strategy-nvim 'session'

# Start iTerm in Full screen
set -g @continuum-boot-options 'iterm,fullscreen'
# set -g @plugin 'catppuccin/tmux'

# Memory, CPU Load in tmux status bar
# set -g @plugin 'thewtex/tmux-mem-cpu-load'

## Plugin Configs

# Enable vim sensible
set -g focus-events on

# Define script when installed via tpm
set -g status-right "#[fg=green]#($TMUX_PLUGIN_MANAGER_PATH/tmux-mem-cpu-load/tmux-mem-cpu-load --colors --powerline-right --interval 2)#[default]"

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run -b '~/.tmux/plugins/tpm/tpm'
